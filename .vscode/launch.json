    "version": "0.2.0",
    "configurations": [
        {
            "name": "gateway",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "args":["-config", "example/gateway/config.yaml"],
            "program": "./cmd/gateway"
        },
        {
            "name": "optionsserver",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "./example/gateway/optionsserver"
        },
        {
            "name": "constructsserver",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "./example/gateway/constructsserver"
        }
    ],
    "compounds": [
        {
            "name": "All",
            "configurations": [
                "constructsserver",
                "optionsserver",
                "gateway"
            ],
            "stopAll": true
        }
    ]
}